<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_item_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginBottom="@dimen/margin_very_small"
    android:layout_marginEnd="@dimen/margin_small"
    android:layout_marginStart="@dimen/margin_small"
    android:layout_marginTop="@dimen/margin_very_small"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/item_notes_color"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            tools:background="@color/colorPrimary" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/item_notes_color"
            android:padding="@dimen/margin_medium">

            <TextView
                android:id="@+id/item_notes_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/item_notes_password"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/item_notes_password"
                style="@style/ImageButton"
                android:layout_toStartOf="@id/item_notes_delete"
                android:visibility="gone"
                app:srcCompat="@drawable/lock_close" />

            <ImageButton
                android:id="@+id/item_notes_delete"
                style="@style/ImageButton.Selectable"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/delete"
                android:contentDescription="@string/delete"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>