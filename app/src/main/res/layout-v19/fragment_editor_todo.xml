<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editor_todo_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.editor.todo.EditorTodoFragment">

    <RelativeLayout
        android:id="@+id/editor_todo_nav_layout"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/editor_todo_back_arrow"
            style="@style/ImageButton.Selectable"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_medium"
            android:contentDescription="@string/back"
            app:srcCompat="@drawable/back" />

        <EditText
            android:id="@+id/editor_todo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/editor_todo_back_arrow"
            android:layout_toStartOf="@id/editor_todo_save"
            android:background="@android:color/transparent"
            android:hint="@string/title"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="flagNoExtractUi"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_small"/>

        <ImageButton
            android:id="@+id/editor_todo_save"
            style="@style/ImageButton.Selectable"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_toStartOf="@id/editor_todo_menu"
            android:contentDescription="@string/save"
            app:srcCompat="@drawable/save" />

        <ImageButton
            android:id="@+id/editor_todo_menu"
            style="@style/ImageButton.Selectable"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_medium"
            android:contentDescription="@string/menu"
            app:srcCompat="@drawable/menu" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/editor_todo_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/editor_todo_add_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editor_todo_nav_layout" />

    <Button
        android:id="@+id/editor_todo_add_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>