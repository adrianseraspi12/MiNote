<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/editor_root"
    android:paddingTop="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:id="@+id/editor_nav_layout"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        
        <ImageButton
            android:id="@+id/editor_back_arrow"
            style="@style/ImageButton.Selectable"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_small"
            android:contentDescription="@string/back"
            app:srcCompat="@drawable/back" />
        
        <EditText
            android:id="@+id/editor_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/editor_back_arrow"
            android:layout_toStartOf="@id/editor_save"
            android:background="@android:color/transparent"
            android:hint="@string/title"
            android:imeOptions="flagNoExtractUi"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:inputType="text"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_small"/>
        
        <ImageButton
            android:id="@+id/editor_save"
            style="@style/ImageButton.Selectable"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_toStartOf="@id/editor_menu"
            android:contentDescription="@string/save"
            app:srcCompat="@drawable/save" />
        
        <ImageButton
            android:id="@+id/editor_menu"
            style="@style/ImageButton.Selectable"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_small"
            android:contentDescription="@string/menu"
            app:srcCompat="@drawable/menu" />
    
    </RelativeLayout>
    
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editor_nav_layout">
        
        <LinearLayout
            android:id="@+id/editor_text_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <EditText
                android:id="@+id/editor_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                android:background="@android:color/transparent"
                android:hint="@string/write_something"
                android:inputType="textMultiLine"
                android:imeOptions="flagNoExtractUi"/>
        
        </LinearLayout>
    
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>